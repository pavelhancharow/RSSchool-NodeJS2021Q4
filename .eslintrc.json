{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "operator-linebreak": [2, "after"],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "object-curly-newline": ["error", { "multiline": true }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-underscore-dangle": ["error", { "allowAfterThis": true }]
    }
}
